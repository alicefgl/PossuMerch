@model PossuMerch.Data.RigaCarrello

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to remove this item from your cart?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Item name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model._NomeP)
        </dd>
        <dt class = "col-sm-2">
            Type:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoP)
        </dd>
        <dt class = "col-sm-2">
            Price:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prezzo)
        </dd>
        <dt class = "col-sm-2">
            Quantity:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantita)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdRigaCarrello" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
