<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Us</title>
    <style>
        table {
            width: 100%;
            height: 100%;
            table-layout: fixed;
            border-collapse: collapse;
        }

        td {
            vertical-align: middle;
        }

    #container {
        width: 40%;
        height: 250px;
        overflow: hidden;
        margin: 0 auto;
        text-align: center;
        position: relative; /* Imposta la posizione relativa */
        border: 10px solid black;
        background-color: black;
    }

        .pics {
            width: auto;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            transition: transform 1s ease-in-out; /* Utilizziamo transform per animare lo spostamento */
        }

        body, html {
            height: 100%;
            margin: 0;
            background-color: #f2f2f2;
        }

        #home {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        hr {
            border: 2px solid black;
            margin-top: 20px;
        }
    </style>
</head>
<script>
        var immagini = ['/img/ChiSiamo/samu.jpeg', '/img/ChiSiamo/alice_el.jpeg', '/img/ChiSiamo/samu_el.jpeg', '/img/ChiSiamo/alice_ba.jpeg'];
        var index = 0;
        var intervallo = 3000;

        function cambiaImmagine() {
            var immagine = document.getElementById('immagine');
            immagine.style.transform = 'translateX(-100%)'; // Sposta l'immagine verso sinistra

            setTimeout(function() {
                index = (index + 1) % immagini.length;
                immagine.src = immagini[index];
                immagine.style.transform = 'translateX(0)'; // Riporta l'immagine al suo posto originale
            }, 1000);
        }
        setInterval(cambiaImmagine, intervallo);
</script>
